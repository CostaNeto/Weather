<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:outlineProvider="none"
    android:padding="4dp"
    app:cardBackgroundColor="#00000000">

    <RelativeLayout
        android:id="@+id/cardRelativeLayout"
        android:layout_width="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/card_backg_time_text_view"
            android:textAlignment="center"
            android:textColor="#CC231F20"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_condition_image_holder"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/card_temperature_text_view"
            android:textAlignment="center"
            android:textColor="#CC231F20"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/card_condition_image_holder"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/card_timeTextView"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/card_condition_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/empty" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>